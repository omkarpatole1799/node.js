<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Bootstrap demo</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <!-- navbar -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">jQuery Practice</a>
        <div id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a href="/">Home</a>
            </li>
            <li class="nav-item">
              <a href="/add-product">Add Product</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <table class="table">
      <thead>
        <tr id="table-heading">
          
        </tr>
      </thead>
      <tbody id="table-data">
        <% data.map((el)=>{ %>
          <tr>
             <td scope="row"><%=el.id%></td> 
             <td scope="row"><%=el.title%></td> 
             <td scope="row"><%=el.price%></td> 
             <td scope="row"><%=el.description%></td> 
             <td scope="row">
              <a href="/delete/<%=el.id%>" class="btn btn-danger btn-sm">Delete</a>
              <a href="/edit/<%=el.id%>" class="btn btn-success btn-sm">Edit</a>
             </td> 
          </tr>
        <% })%>
      </tbody>
    </table>

    <!-- bootstrap cdn -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"
    ></script>

    <!-- jQuery cdn -->
    <script
      src="https://code.jquery.com/jquery-3.7.0.min.js"
      integrity="sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g="
      crossorigin="anonymous"
    ></script>

    <!-- custom js -->
    <script src="../public/script.js"></script>
  </body>
</html>
